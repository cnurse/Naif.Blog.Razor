<div class="modal fade" id="@Name" tabindex="-1" aria-labelledby="@_label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@_label">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@CloseText"></button>
            </div>
            <div class="modal-body">
                @Text  
            </div>
            <div class="modal-footer">
                <a role="button" class="btn btn-secondary" data-bs-dismiss="modal">@CloseText</a>
                <a role="button" class="btn btn-primary" href="@Url">@ConfirmText</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string _label;
    
    [Parameter]
    public string CloseText { get; set; }
    
    [Parameter]
    public string ConfirmText { get; set; }

    [Parameter]
    public string Name { get; set; }
    
    [Parameter]
    public string Text { get; set; }
    
    [Parameter]
    public string Title { get; set; }
    
    [Parameter]
    public string Url { get; set; }
    
    protected override void OnParametersSet()
    {
        _label = $"{Name}_label";
    }
}
